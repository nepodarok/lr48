<div class="row">
  <div class="col-sm-12">
    <h1>Products <%= link_to 'New Product', new_admin_product_path, class: 'btn btn-success' %></h1>
  </div>
</div>

<hr />
<%= link_to_unless_current "EN", locale: 'en' %>
<%= link_to_unless_current "RU", locale: 'ru' %>
<hr />

<table class="table table-striped">
  <tr>
    <th><%= t '.image' %></th>
    <th><%= t '.title'%></th>
    <th><%= t '.description'%></th>
    <th><%= t '.price' %></th>
    <th><%= t '.category' %></th>
    <th><%= t '.actions' %></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "/uploads/#{product.id}", size: '100' %></td>
        <td><%= product.title_ru %></td>
        <td><%= product.description_ru %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name_ru %></td>
        <td>
          <%= link_to 'View', admin_product_path(product) %>
          <%= link_to 'Edit', edit_admin_product_path(product) %>
          <%= link_to 'Delete', admin_product_path(product),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
        </td>
      </tr>
  <% end %>

</table>
